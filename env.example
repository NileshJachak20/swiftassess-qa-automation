# SwiftAssess QA Automation Environment Configuration

# Application URLs
PRODUCTION_URL=https://app.swiftassess.com/Signup
STAGING_URL=https://app-stg.swiftassess.com/Signup
BASE_URL=https://app.swiftassess.com

# Browser Configuration
BROWSER=chrome
HEADLESS=false
WINDOW_SIZE=1920,1080

# Test Configuration
TEST_ENV=staging
PARALLEL_WORKERS=4
RETRY_COUNT=2
RETRY_DELAY=1

# Screenshot Configuration
SCREENSHOT_ON_FAILURE=true
SCREENSHOT_ON_SUCCESS=false
SCREENSHOT_DIRECTORY=screenshots

# Reporting Configuration
REPORT_FORMAT=html
REPORT_TITLE=SwiftAssess Test Report
ALLURE_RESULTS_DIR=reports/allure-results

# Load Testing Configuration
K6_VUS=10
K6_DURATION=5m
K6_RAMP_UP=1m

# Database Configuration (if applicable)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=swiftassess_test
DB_USER=test_user
DB_PASSWORD=test_password

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=qa-team@company.com
SMTP_PASSWORD=your_password
NOTIFICATION_EMAIL=qa-team@company.com

# CI/CD Configuration
JENKINS_URL=http://localhost:8080
JENKINS_USER=admin
JENKINS_TOKEN=your_token
BUILD_NUMBER=1
BRANCH_NAME=main

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s [%(levelname)8s] %(name)s: %(message)s
LOG_FILE=logs/test_execution.log

# Performance Thresholds
MAX_RESPONSE_TIME=2000
MAX_ERROR_RATE=1.0
MIN_THROUGHPUT=100

# Security Configuration
API_KEY=your_api_key
SECRET_KEY=your_secret_key
ENCRYPTION_KEY=your_encryption_key
